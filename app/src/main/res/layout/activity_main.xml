<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_record_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录制音频："
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_record_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_record_audio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_record_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="停止"
        app:layout_constraintLeft_toRightOf="@id/btn_record_start"
        app:layout_constraintTop_toBottomOf="@id/tv_record_audio" />

    <ProgressBar
        android:id="@+id/record_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_record_stop" />

    <TextView
        android:id="@+id/tv_play_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="播放音频："
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_progress_bar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_play_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_play_audio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂停"
        app:layout_constraintLeft_toRightOf="@id/btn_play_start"
        app:layout_constraintTop_toBottomOf="@id/tv_play_audio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_play_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="停止"
        app:layout_constraintLeft_toRightOf="@id/btn_play_pause"
        app:layout_constraintTop_toBottomOf="@id/tv_play_audio" />

    <ProgressBar
        android:id="@+id/play_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_play_stop" />

</androidx.constraintlayout.widget.ConstraintLayout>